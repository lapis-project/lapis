{
	"name": "lapis",
	"version": "1.0.0",
	"description": "Monorepo for Lapis",
	"keywords": [],
	"author": "Kilian Kukelka",
	"license": "MIT",
	"scripts": {
		"prepare": "run-s setup",
		"setup": "is-ci || simple-git-hooks",
		"format:check": "prettier . \"!./content/**\" --cache --check --ignore-path .prettierignore",
		"build:lexat": "cd apps/lexat && pnpm build",
		"dev:lexat": "cd apps/lexat && pnpm dev",
		"start:lexat": "cd apps/lexat && pnpm start"
	},
	"packageManager": "pnpm@9.4.0",
	"devDependencies": {
		"@acdh-oeaw/prettier-config": "^2.0.0",
		"@types/node": "^20.14.9",
		"is-ci": "^3.0.1",
		"lint-staged": "^15.2.7",
		"npm-run-all2": "^6.2.0",
		"prettier": "^3.3.2",
		"simple-git-hooks": "^2.11.1",
		"typescript": "^5.5.2"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"lint-staged": {
		"*": "prettier --cache --ignore-unknown --write"
	}
}
