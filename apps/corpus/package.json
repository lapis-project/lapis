{
	"name": "@lapis/corpus",
	"private": true,
	"license": "MIT",
	"type": "module",
	"main": "./nuxt.config.ts",
	"engines": {
		"node": ">=22.12.0",
		"pnpm": "10.x"
	},
	"scripts": {
		"analyze": "nuxt analyze",
		"build": "NODE_OPTIONS=--max_old_space_size=8192 nuxt build --dotenv ./.env.local",
		"dev": "nuxt dev --dotenv ./.env.prod.local",
		"dev-local": "nuxt dev --dotenv ./.env.dev.local",
		"postinstall": "nuxt prepare",
		"preinstall": "npx only-allow pnpm",
		"start": "nuxt preview --dotenv ./.env.dev.local",
		"format:check": "prettier . \"!./@(content|public)/**\" --cache --cache-location ./.prettiercache --check",
		"format:fix": "pnpm run format:check --write --ignore-path ../../.prettierignore",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"types:check": "nuxt typecheck",
		"validate": "run-p format:check lint:check types:check test test:e2e"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.1.12",
		"@fontsource-variable/inter": "^5.2.6",
		"@lapis/backend": "workspace:*",
		"@nuxt/image": "^1.10.0",
		"@nuxtjs/color-mode": "^3.5.2",
		"@nuxtjs/i18n": "^9.5.5",
		"@tailwindcss/vite": "^4.1.13",
		"@vue/devtools-api": "^7.7.7",
		"@vueuse/core": "^13.6.0",
		"@vueuse/nuxt": "^13.6.0",
		"audiomotion-analyzer": "^4.5.1",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"cva": "1.0.0-beta.1",
		"lucide-vue-next": "^0.540.0",
		"nuxt": "3.18.1",
		"nuxt-svgo": "^4.2.4",
		"reka-ui": "^2.4.0",
		"tailwind-merge": "^3.3.1",
		"tailwindcss-animate": "^1.0.7",
		"tw-animate-css": "^1.3.6",
		"vee-validate": "^4.15.1",
		"vue": "^3.5.18",
		"vue-i18n": "^10.0.7",
		"vue-i18n-routing": "^1.2.0",
		"vue-router": "^4.5.1",
		"vue-sonner": "^2.0.1",
		"wavesurfer.js": "^7.10.1"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.10",
		"@acdh-oeaw/eslint-config-nuxt": "^2.0.15",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.11",
		"@acdh-oeaw/eslint-config-vue": "^2.0.13",
		"@acdh-oeaw/stylelint-config": "^2.3.0",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@nuxt/devtools": "^1.7.0",
		"@nuxt/eslint": "^1.6.0",
		"@playwright/test": "^1.54.1",
		"@types/node": "^22.18.1",
		"dotenv": "^16.6.1",
		"dotenv-expand": "^11.0.7",
		"eslint": "^9.34.0",
		"eslint-config-flat-gitignore": "^0.3.0",
		"schema-dts": "^1.1.5",
		"stylelint": "^16.24.0",
		"tailwindcss": "^4.1.13",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.39.0",
		"vite": "^5.4.20",
		"vue-tsc": "^2.2.12"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.@(vue)": [
			"eslint --cache --fix",
			"stylelint --cache --fix --allow-empty-input",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.!(css|js|ts|vue),!./@(content|public)/**": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
