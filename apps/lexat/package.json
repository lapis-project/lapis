{
	"name": "lexat",
	"license": "MIT",
	"type": "module",
	"main": "./nuxt.config.ts",
	"engines": {
		"node": "20.x",
		"pnpm": "9.x"
	},
	"packageManager": "pnpm@9.4.0",
	"scripts": {
		"analyze": "nuxt analyze",
		"build": "NODE_OPTIONS=--max_old_space_size=8192 nuxt build --dotenv ./.env.local",
		"dev": "nuxt dev --dotenv ./.env.local",
		"postinstall": "nuxt prepare",
		"preinstall": "npx only-allow pnpm",
		"start": "nuxt preview --dotenv ./.env.local",
		"test": "exit 0",
		"test:e2e": "playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:update-snapshots": "playwright test --update-snapshots",
		"format:check": "prettier . \"!./content/**\" --cache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache --ext .js,.ts,.vue --ignore-path ./.gitignore",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.@(css|vue)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"types:check": "nuxt typecheck",
		"validate": "run-p format:check lint:check types:check test test:e2e"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.1.12",
		"@fontsource-variable/inter": "^5.0.18",
		"@heroicons/vue": "^2.1.4",
		"@nuxt/content": "^2.13.0",
		"@nuxt/image": "^1.7.0",
		"@nuxtjs/color-mode": "^3.4.2",
		"@nuxtjs/i18n": "^8.3.1",
		"@turf/turf": "^7.0.0",
		"@types/three": "^0.166.0",
		"@vueuse/core": "^10.11.0",
		"@vueuse/nuxt": "^10.11.0",
		"class-variance-authority": "^0.7.0",
		"clsx": "^2.1.1",
		"cva": "^1.0.0-beta.1",
		"fast-glob": "^3.3.2",
		"lucide-vue-next": "^0.399.0",
		"maplibre-gl": "^4.5.0",
		"nuxt": "^3.12.2",
		"pino-http": "^10.1.0",
		"radix-vue": "^1.8.5",
		"satori": "^0.10.13",
		"shadcn-nuxt": "^0.10.4",
		"tailwind-merge": "^2.3.0",
		"tailwindcss-animate": "^1.0.7",
		"three": "^0.166.0",
		"valibot": "^0.35.0",
		"vue": "^3.4.31",
		"vue-i18n": "^9.13.1",
		"vue-i18n-routing": "^1.2.0",
		"vue-router": "^4.4.0"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^1.0.9",
		"@acdh-oeaw/eslint-config-nuxt": "^1.0.15",
		"@acdh-oeaw/eslint-config-playwright": "^1.0.9",
		"@acdh-oeaw/eslint-config-vue": "^1.0.14",
		"@acdh-oeaw/stylelint-config": "^2.0.1",
		"@acdh-oeaw/tsconfig": "^1.1.1",
		"@nuxt/devtools": "^1.3.7",
		"@nuxtjs/tailwindcss": "^6.12.0",
		"@playwright/test": "^1.45.0",
		"@tailwindcss/typography": "^0.5.13",
		"@types/geojson": "^7946.0.14",
		"@types/node": "^20.14.9",
		"@watergis/maplibre-gl-export": "^3.8.1",
		"axe-core": "^4.9.1",
		"axe-playwright": "^2.0.1",
		"ci-info": "^4.0.0",
		"dotenv": "^16.4.5",
		"dotenv-expand": "^11.0.6",
		"eslint": "^8.57.0",
		"eslint-plugin-tailwindcss": "^3.17.4",
		"postcss": "^8.4.39",
		"schema-dts": "^1.1.2",
		"stylelint": "^16.6.1",
		"tailwindcss": "^3.4.4",
		"typescript": "^5.5.2",
		"vite": "^5.3.2",
		"vue-tsc": "^2.0.24"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config/strict",
			"@acdh-oeaw/eslint-config-vue",
			"@acdh-oeaw/eslint-config-nuxt",
			"@acdh-oeaw/eslint-config-playwright",
			"plugin:eslint-plugin-tailwindcss/recommended"
		]
	},
	"lint-staged": {
		"*.@(vue)": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --write"
		],
		"*.!(css|js|ts|vue),!./content/**": "prettier --cache --ignore-unknown --write"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {}
		}
	}
}
