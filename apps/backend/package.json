{
	"name": "@lapis/backend",
	"private": true,
	"license": "MIT",
	"type": "module",
	"version": "1.0.0",
	"engines": {
		"node": ">=24.11.0",
		"pnpm": ">=10.25"
	},
	"exports": {
		"./api": {
			"types": "./src/app.ts"
		}
	},
	"scripts": {
		"dev": "tsx watch --env-file .env.local src/index.ts",
		"dev-test": "tsx watch src/index.ts",
		"generate-types-kysely": "kysely-codegen --include-pattern='public.*' --out-file src/types/db.d.ts",
		"test:cms-handler": "vitest cmsHandler",
		"test:article-handler": "vitest articleHandler",
		"test:user-handler": "vitest userHandler",
		"start": "node --env-file .env.local ./dist/index.js",
		"build": "tsdown --dts"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.1.12",
		"@aws-sdk/client-s3": "^3.940.0",
		"@aws-sdk/s3-request-presigner": "^3.940.0",
		"@hono/node-server": "^1.19.6",
		"@hono/valibot-validator": "^0.5.3",
		"@imgproxy/imgproxy-node": "^1.1.0",
		"@lucia-auth/adapter-postgresql": "^3.1.2",
		"@node-rs/argon2": "^2.0.2",
		"dotenv": "^16.6.1",
		"hono": "^4.10.7",
		"kysely": "^0.28.8",
		"lucia": "^3.2.2",
		"pg": "^8.16.3",
		"tsx": "^4.21.0",
		"valibot": "^0.42.1"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.11",
		"@acdh-oeaw/eslint-config-node": "^2.0.11",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@types/node": "^22.19.1",
		"@types/pg": "^8.15.6",
		"@vitest/coverage-v8": "^2.1.9",
		"@vitest/ui": "^2.1.9",
		"eslint": "^9.39.1",
		"eslint-config-flat-gitignore": "^0.3.0",
		"kysely-codegen": "^0.18.5",
		"prettier": "^3.7.3",
		"tsdown": "^0.15.12",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.0",
		"vite": "^5.4.21",
		"vite-tsconfig-paths": "^5.1.4",
		"vitest": "^2.1.9"
	},
	"eslintConfig": {
		"extends": [
			"@acdh-oeaw/eslint-config",
			"@acdh-oeaw/eslint-config/strict",
			"@acdh-oeaw/eslint-config-node"
		]
	},
	"lint-staged": {
		"*.@(js|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		]
	},
	"prettier": "@acdh-oeaw/prettier-config"
}
