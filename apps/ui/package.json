		"nuxt": "4.2.2",
		"reka-ui": "^2.7.0",
		"shadcn-nuxt": "^2.4.3",
		"tailwind-merge": "^3.4.0",
		"tailwindcss-animate": "^1.0.7",
		"tw-animate-css": "^1.4.0",
		"vaul-vue": "^0.4.1",
		"vee-validate": "^4.15.1",
		"vue": "^3.5.26",
