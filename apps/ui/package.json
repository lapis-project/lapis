	"type": "module",
	"main": "./nuxt.config.ts",
	"engines": {
		"node": ">=22.12.0",
		"pnpm": "10.x"
	},
	"scripts": {
		"build": "nuxt build",
		"dev": "nuxt dev"
	},
	"dependencies": {
